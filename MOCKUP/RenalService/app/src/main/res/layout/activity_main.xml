<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout">

    <include
        layout="@layout/app_bar_navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/rent_cardView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="4dp"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/rent_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent Details: "
                    android:textSize="24sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_below="@id/rent_cardView"
                android:id="@+id/owner_call_cardView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="@color/colorAccent">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:padding="8dp">

                   <TextView
                       android:id="@+id/call_to_owner_textView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Contacts"
                       android:textSize="24sp"/>
                   <Button
                       android:id="@+id/call_button_id"
                       android:layout_below="@+id/call_to_owner_textView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Call"
                       android:layout_marginTop="4dp"
                       android:drawableLeft="@drawable/ic_call_black_24dp"
                       android:drawablePadding="4dp"
                       android:background="@drawable/button_custom"/>

                   <Button
                       android:id="@+id/message_button_id"
                       android:layout_toEndOf="@+id/call_button_id"
                       android:layout_below="@+id/call_to_owner_textView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Message"
                       android:layout_marginStart="4dp"
                       android:layout_marginTop="4dp"
                       android:drawableLeft="@drawable/ic_message_black_24dp"
                       android:drawablePadding="4dp"
                       android:background="@drawable/button_custom"/>
               </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"

        app:menu="@menu/activity_navigation_drawer_drawer" />

</android.support.v4.widget.DrawerLayout>